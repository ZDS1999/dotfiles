# functions
function ranger-cd {
    tempfile="$(mktemp -t tmp.XXXXXX)"
    /usr/bin/ranger --choosedir="$tempfile" "${@:-$(pwd)}"
    test -f "$tempfile" &&
    if [ "$(cat -- "$tempfile")" != "$(echo -n `pwd`)" ]; then
        cd -- "$(cat "$tempfile")"
    fi  
    rm -f -- "$tempfile"
}

function mkcd {
    mkdir $1
    cd $1
}

precmd() { pwd > /tmp/workingdir }

source ~/.config/zsh/fzf.zsh

function dateCount {
    target=$(date -d "2020-12-26" +"%j")
    today=$(date +"%j")
    cowsay $((target-today)) days to graduate exam 
}

dateCount
