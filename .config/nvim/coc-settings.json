{
  "coc.preferences.diagnostic.displayByAle": true,
  "coc.preferences.colorSupport": true,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc-actions.hideCursor": true,
  "highlight.disableLanguages": ["markdown"],
  "codeLens.enable": false,
  "codeLens.separator": "‣",
  "diagnostic.enable": false,
  "suggest.minTriggerInputLength": 2,
  "suggest.floatEnable": true,
  "suggest.maxCompleteItemCount": 10,
  "suggest.removeDuplicateItems": true,
  "suggest.enablePreview": true,
  "suggest.noselect": true,
  "list.source.grep.args": ["--ignore-case"],
  "list.source.lines.defaultArgs": ["--ignore-case"],
  "explorer.previewAction.onHover": false,
  "explorer.icon.enableNerdfont": true,
  "explorer.keyMappings": {
    "t": "open:tab",
    "v": "open:vsplit",
    "h": "open:split"
  },
  "bookmark.sign": "⚑",
  "highlight.colorNames.enable": false,
  "snippets.ultisnips.enable": true,
  "snippets.loadFromExtensions": false,
  "snippets.extends": {
    "cpp": ["c"],
    "html": ["javascript"]
  },
  "python.jediEnabled": true,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}
